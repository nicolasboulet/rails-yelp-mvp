<h1>All Our Restaurants :</h1>

<table>
  <tbody>
    <% @restaurants.each do |r| %>
    <tr>

      <td><%= r.name %></td>
      <td><%= link_to "Show", admin_restaurant_path(r), class: "btn btn-primary" %> |</td>
      <td><%= link_to "Edit", edit_admin_restaurant_path(r), class: "btn btn-success" %> |</td>
      <td><%= link_to "Destroy", admin_restaurant_path(r), method: "delete", data:
      { confirm: "Are you sure?" }, class: "btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
